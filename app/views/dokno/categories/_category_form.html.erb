<section class="mb-10">

  <div class="text-2xl mb-5"><%= category.persisted? ? 'Edit' : 'New' %> Category</div>
  <hr class="mb-5" />

  <div class="mb-5">
    <div class="text-lg font-semibold"><label for="name">Category Name</label></div>
    <input type="text" name="name" id="name" value="<%= category.name %>" class="rounded text-xl shadow-inner bg-gray-100 p-2 mt-2 w-1/3" />
    <div class="text-gray-500 mt-2">Unique name for this category (required)</div>
  </div>

  <% if Dokno::Category.exists? %>
    <div class="mb-5">
      <div class="text-lg font-semibold"><label for="category_id">Parent Category</label></div>
      <select name="category_id" id="category_id" class="rounded text-xl shadow-inner bg-gray-100 p-2 mt-2 w-1/2 max-w-full">
        <option></option>
        <%= Dokno::Category.select_option_markup(selected_category_ids: [@parent_category_id], exclude_category_id: category.id).html_safe %>
      </select>
      <div class="text-gray-500 mt-2 w-1/2">
        The existing category to which this category belongs.
        <% if (article_count = category.articles.count).positive? %>
          There <%= article_count > 1 ? "are #{article_count} articles" : 'is an article' %> currently in this category.
          Changing the parent category will move <%= article_count > 1 ? 'them' : 'it' %> as well.
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-10">
    <button type="submit" class="bg-gray-600 text-gray-200 hover:bg-gray-800 hover:text-white rounded py-1 px-2 text-sm font-semibold"><i data-feather="save" class="inline h-4"></i> SAVE CATEGORY</button>
    <span class="text-lg ml-5"><a class="no-underline" href="<%= root_path %>">Cancel</a></span>
  </div>
</section>
